<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.blog.pojo">

   <class name="ArticleBean" table="article">
	  <!--主键需要指定-->
      <id name="id">
         <generator class="native" />
      </id>
      
      <property name="title" />
      <property name="contentA" column="content" />
      <property name="username" />
      <property name="date" />
      <property name="hasread" />

   </class>

</hibernate-mapping>
